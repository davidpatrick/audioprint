= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .row.collapse
    .small-3.columns
      = f.label :name, class: 'right inline'
    .small-9.columns
      = f.text_field :name
  .row.collapse
    .small-3.columns
      = f.label :price, class: 'right inline', title: 'Price in USD'
    .small-9.columns
      = f.text_field :price
  .row.collapse
    .small-9.small-offset-3.columns
      = f.submit 'Save', class: 'button'
