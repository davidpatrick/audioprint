.small-12
  .row
    .large-12.columns
      #slider
        %ul{ "data-orbit" => ""}
          - @featured_blogs.each do |blog|
            %li
              = image_tag blog.blog_cover(:large), style: "width:1000px;height:400px;"
              .orbit-caption
                = sanitize blog.post
      %hr/
    / Three-up Content Blocks
    .row
      .blog-entries
        - @featured_blogs.each_with_index do |blog, index|
          .blog-post.large-6.columns
            .panel-header
              %h4= link_to truncate(blog.title, length: 120), blog
              %p
                Posted
                = blog.created_at.strftime("%B %d, %Y")
            .blog-content.panel
              .blog-image
                = image_tag blog.blog_cover.url(:medium), style: "width:100%;"
              <iframe class='blog-player' width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F100250918"></iframe>
              .blog-text.panel
                = sanitize blog.post
          - if (index + 1).even?
            .clear-row.left.full-width
    / Call to Action Panel
    .row
      .large-12.columns
        .panel
          %h4 Get in touch!
          .row
            .large-9.columns
              %p We'd love to hear from you, you attractive person you.
            .large-3.columns
              %a.radius.button.right{:href => "#"} Contact Us
    / Footer
    %footer.row
      .large-12.columns
        %hr/
        .row
          .large-6.columns
            %p Â© Copyright no one at all. Go to town.
          .large-6.columns
            %ul.inline-list.right
              %li
                %a{:href => "#"} Link 1
              %li
                %a{:href => "#"} Link 2
              %li
                %a{:href => "#"} Link 3
              %li
                %a{:href => "#"} Link 4