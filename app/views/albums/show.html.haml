.row
  .large-6.columns.text-centered
    = image_tag @album.cover_art.url(:large)
  .large-6.columns
    %ul.pricing-table
      %li.title
        ="#{@album.title} - #{@album.artist}"
        %br
        %small
          =@album.release_date.strftime("%B %d, %Y")
      %li.price
        =number_to_currency(@album.price, :unit => "$")
      %li.description
        Catalog ID #AP#{@album.catalog_id}
      %li.bullet-item
        =print_stock(@album.quantity)
      %li.cta-button
        %a.button{href: '#'}
          Add to Cart
          %i.icon-shopping-cart
.row
  .small-12
    %fieldset{style: "margin:5px;padding:5px;"}
      %legend Track Listing
      %table.full-width
        %thead
          %tr
            %th.hide-for-small Track
            %th Title
            %th.hide-for-small Length
            %th.text-centered Digital
        %tbody#tracks{ data: {'update-url' => sort_tracks_albums_url, 'album-id' => @album.id} }
          -@album.track_list.each_with_index do |song, index|
            %tr{id: "song-#{song.id}"}
              = render :partial => 'albums/partials/album_track', :locals => {song: song, edit_album: true}

-if can? :manage, @album
  = link_to 'Edit', edit_album_path(@album)
  \|
  = link_to 'Delete', @album, method: :delete, data: { confirm: 'Are you sure you want to delete this album and all of it\'s songs?' }
  \|
  = link_to 'Back', albums_path
-else
  = link_to 'Back', albums_path